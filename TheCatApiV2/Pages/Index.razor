@page "/"
@using TheCatApiV2.Data;
@inject AuthenticationStateProvider GetAuthenticationStateAsync
@inject DatabaseContext GetDatabaseContext

<PageTitle>Page d'acceuil</PageTitle>

Est-ce que tu aimes le chat ?


@if (this.loadPicture.UrlPicture is not null)
{
    <MudDiv>
        <AuthorizeView>
            <Authorized>
                <img width="450px" height="450px" src="@this.loadPicture.UrlPicture" />
                <MudIconButton Icon="@Icons.Material.Filled.ThumbUp" Variant="@variantLike"  aria-label="J'aime" OnClick="Like"></MudIconButton>
                <MudIconButton Icon="@Icons.Material.Filled.Favorite" OnClick="AddInMyFavorites" aria-label=" Mettre en favorie"></MudIconButton>
                <MudIconButton Icon="@Icons.Material.Filled.ThumbDown" Variant="@variantBadLike" aria-label="Je n'aime pas'" OnClick="BadLike"></MudIconButton>
            </Authorized>
            <NotAuthorized>
                <MudText Typo="Typo.h4">Vous devez vous connecter pour accéder à cette page.</MudText>
            </NotAuthorized>
        </AuthorizeView>
    </MudDiv>
}
